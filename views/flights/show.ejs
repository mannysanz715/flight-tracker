<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<h1><%= title %> </h1>

  <div>Flight: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure Date: </div>
  <div><%= flight.departs %></div>
  <form action="/flights/<%= flight._id %>/edit" method="GET">
    <button>Change Flight Details</button>
  </form>
  <form action="/flights" method="GET">
    <button>Go Back</button>
  </form>


  <h2>Tickets?</h2>

  <form action="/flights/<%= flight._id %>/tickets" method="post">
    <div>
      Seat
    </div>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <div>
      Price
    </div>
    <input name="price" required type="number">
    <button type="submit">Add Ticket</button>
  </form>

  <form action="???" method="post">
    <div>Add Meal to Flight</div>
  <select name="mealId">
    <% meals.forEach(meal => { %>
      <option value="<%= meal.name %>"><%= meal.name %></option>
    <% }) %>
  </select>
  <button type="submit">Add</button>
</form>



<% if (flight.tickets.length) { %>
  <h2>Purchased Tickets:</h2>
  
  <% flight.tickets.forEach(ticket => { %>
    <div>Seat: <%= ticket.seat %> </div>
    <div>Price: <%= ticket.price %> </div>
  <% }) %>

  <% } else { %>
  
    <h2>No Purchased Tickets Yet</h2>

<% } %>

<%- include('../partials/footer') %>
